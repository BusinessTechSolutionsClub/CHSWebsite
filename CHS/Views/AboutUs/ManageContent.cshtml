@model IEnumerable<CHS.Models.AboutUs>

@{
    ViewBag.Title = "Manage Content";
}

<h2>Manage About Us Content</h2>
<!--
    
Hide create button since we're not allowing to add any additional data for styles purposes
    <p>
    @@Html.ActionLink("Create New", "Create")
</p>
-->

<div class="row">
    <div class="col-sm-12">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ContentShortDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Content)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContentShortDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Content)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>

    </div>
</div>
