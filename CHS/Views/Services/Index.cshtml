@model IEnumerable<CHS.Models.Service>

@{
    ViewBag.Title = "Services";
}
<link href="~/Content/CHSStyles.css" rel="stylesheet" />
<h1 class="page-title">Services</h1>
<hr style="border-color:black;" />

<div class="container-fluid">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="pannel panel-default">
                @foreach (var i in Model)
                {
                    <div class="panel-heading">
                     @i.ServiceName
                     <span class="badge" style="float:right">@i.Price</span>
                    </div>
                    <div class="panel-body">@i.EstimatedTime @i.ServiceDescription</div>
                }
             </div>
            
        </div>
        <div class="col-md-2"></div>
    </div>
</div>