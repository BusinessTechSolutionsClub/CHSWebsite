@model IEnumerable<CHS.Models.Service>

@{
    ViewBag.Title = "Services";
}
<link href="~/Content/CHSStyles.css" rel="stylesheet" />
<h1 class="page-title">Services</h1>
<hr style="border-color:black;" />

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <h3 class="sub-categories">Women Services</h3>
            <div class="list-group">
                @foreach (var i in Model)
                {
                    if (i.women == true)
                    {
                        <div class="list-group-item">
                            <span class="service-title">@i.ServiceName</span>
                            <span class="badge" style="float:right">@i.Price</span>
                            <br />
                            <p>@i.EstimatedTime @i.ServiceDescription</p>

                        </div>
                    }


                }
             </div>
            
        </div>
        <div class="col-md-6">
            <h3 class="sub-categories">Man Services</h3>
            <div class="list-group">
                @foreach (var i in Model)
                {
                    if (i.women == false)
                    {
                        <div class="list-group-item">
                            <span class="service-title">@i.ServiceName</span>
                            <span class="badge" style="float:right">@i.Price</span>
                            <br />
                            <p>@i.EstimatedTime @i.ServiceDescription</p>
                        </div>
                    }
                }
            </div>
        </div>
     </div>
</div>