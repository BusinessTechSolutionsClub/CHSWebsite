@model IEnumerable<CHS.Models.Service>

@{
    ViewBag.Title = "Services";
}
<link href="~/Content/CHSStyles.css" rel="stylesheet" />
<h1 class="page-title">Services</h1>
<hr style="border-color:black;" />

<div class="container-fluid">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="list-group">
                @foreach (var i in Model)
                {
                    <div class="list-group-item">
                     @i.ServiceName
                        <span class="badge" style="float:right">@i.Price</span>
                        <br />
                     <p>@i.EstimatedTime @i.ServiceDescription</p>
                    
                    </div>
                   
                }
             </div>
            
        </div>
        <div class="col-md-2"></div>
    </div>
</div>