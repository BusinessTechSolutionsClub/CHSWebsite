@model IEnumerable<CHS.Models.HoursOfOperation>

@{
    ViewBag.Title = "Hours of Operation";
}

<link href="~/Content/CHSStyles.css" rel="stylesheet" />


<h1 class="page-title">Hours of Operation</h1>
<hr style="border-color:black;" />
<div class="container-fluid">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                            <tr>
                                <td>
                                    @item.dayOfWeek
                                </td>
                                @if(item.status=="Closed")
                                {
                                    <td>Closed</td>
                                }
                                else
                                {
                                    <td>

                                        @item.openTime
                                    </td>
                                }
                                
                                <td>
                                    @item.closeTime
                                </td>
                                
                            </tr>
                      
                    }

                     </tbody>
            </table>
        </div>
        </div>
        </div>
    </div>
 </div>



